{
  "name": "@awesomesolana/ui",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf ./dist ./tsconfig.tsbuildinfo",
    "build": "yarn && yarn clean && cross-env NODE_ENV=production microbundle --tsconfig ./tsconfig.json",
    "publish": "yarn npm publish",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "tsc --noEmit --incremental false",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "jest --clearCache && jest"
  },
  "main": "dist/awesomesolana-ui.cjs",
  "module": "dist/awesomesolana-ui.esm.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwind-merge": "^1.2.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@awesomesolana/tw": "workspace:^"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
